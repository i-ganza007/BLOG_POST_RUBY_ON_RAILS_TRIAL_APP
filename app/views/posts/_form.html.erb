<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :username, style: "display: block" %>
    <%= form.text_field :username %>
    <% if post.errors[:username].any? %>
      <span style="color: red;"><%= post.errors[:username].first %></span>
    <% end %>
  </div>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
    <% if post.errors[:title].any? %>
      <span style="color: red;"><%= post.errors[:title].first %></span>
    <% end %>
  </div>

  <div>
    <%= form.label :topic, style: "display: block" %>
    <%= form.text_field :topic %>
    <% if post.errors[:topic].any? %>
      <span style="color: red;"><%= post.errors[:topic].first %></span>
    <% end %>
  </div>

  <div>
    <%= form.label :body, style: "display: block" %>
    <%= form.text_area :body %> <!-- Changed to text_area for multi-line text -->
    <% if post.errors[:body].any? %>
      <span style="color: red;"><%= post.errors[:body].first %></span>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
